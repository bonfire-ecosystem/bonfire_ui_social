<div
  role="feed"
  aria-live="assertive"
  aria-atomic="true"
  class="feed">
    <div class="flex flex-col mx-auto max-w-7xl">
      <div :if={not is_list(@feed) or length(@feed) == 0} class="p-4 text-center">
        <div class="mb-3 text-3xl">🧐</div>
        <span class="text-base font-medium text-gray-700 dark:text-gray-100">Take a deep breath...</span>
      </div>
    <div
      :if={is_list(@feed) or length(@feed) > 0}
      id="feed_future" 
      phx-update="prepend" 
      class="divide-y dark:divide-gray-600">
      <article
        :for={entry <- @feed_future}
        id={e(entry, :activity, :id, e(entry, :activity, :object, :id, "unknown-activity"))}
        role="article"
        tabIndex="0"
        aria-label="user activity"
        class="lg:px-3">
        <ActivityLive
          activity={e(entry, :activity, entry)}
        />
      </article>
    </div>
    <div id="feed_past" phx-update="append" class="divide-y dark:divide-gray-600">
      <article
        :for={entry <- @feed}
        id={e(entry, :activity, :id, e(entry, :activity, :object, :id, "unknown-activity"))}
        role="article"
        tabIndex="0"
        aria-label="user activity"
        class="lg:px-3">
        <ActivityLive activity={e(entry, :activity, entry)} />
      </article>
    </div>

    <!-- Pagination -->
    <div 
      :if={e(@page_info, :after, nil)}
      id="load_more" 
      phx-click="Bonfire.Social.Feeds:load_more" 
      phx-value-after={e(@page_info, :after, nil)} 
      class="flex justify-center w-full p-3 mx-auto border-t dark:border-gray-600 place-items-center cursor-pointer"> 
      <div class="relative w-full items-center px-4 py-2 text-sm text-center font-medium text-gray-700 rounded-md dark:text-gray-300 dark:hover:bg-gray-500 hover:bg-gray-50 ">
        {l "Load more"}
        <noscript>
          <a href={"?Bonfire.Social.Feeds[after]=" <> e(@page_info, :after, nil)} class="text-underline">
            (click here)
          </a>
        </noscript>
      </div>
    </div>

    </div>
</div>

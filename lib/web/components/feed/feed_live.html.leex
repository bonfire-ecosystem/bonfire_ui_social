<div class="mb-8">
    <div class="mx-auto max-w-7xl">
    <%= if length(@feed) == 0 do %>
      <div class="p-4 text-center">
        <div class="mb-3 text-3xl">🧐</div>
        <span class="font-medium text-base text-gray-700">Take a deep breath...<span>
      </div>
    <% else %>
      <%= for entry <- @feed do %>
      <div class="px-3 border-b">
        <%= live_component(
        @socket,
        ActivityLive,
        assigns
        |> assigns_merge(
          id: e(entry, :activity, :id, e(entry, :id, nil)),
          activity: e(entry, :activity, entry),# |> IO.inspect,
          current_user: @current_user
        )
      ) %>
      </div>
      <% end %>
    <% end %>
    <%= if e(@page_info, :after, nil) do %>
    <div class="flex justify-center p-3 mx-auto place-items-center">
      <a phx-click="feed_load_more" phx-value-after="<%= e(@page_info, :after, nil) %>" href="?feed[after]=<%= e(@page_info, :after, nil) %>" class="relative inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50">Load more</a>
    </div>
    <% end %>
    </div>
</div>
